{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist/esm",
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "dist/esm/tsconfig.tsbuildinfo",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "references": [
    { "path": "../cqrs/tsconfig.esm.json" }
  ],
  "include": ["src"],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/__tests__",
  ],
}