{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist/esm",
    "tsBuildInfoFile": "dist/esm/tsconfig.tsbuildinfo",
    "incremental": true,
    "composite": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/__tests__",
  ],
}