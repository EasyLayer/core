{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "incremental": true,
    "composite": true,
    "sourceMap": false,
    "declarationMap": false
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/__tests__",
  ],
}