  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": [
    "src/browser",
    "dist",
    "**/*.test.ts",
    "**/__tests__",
  ],
}