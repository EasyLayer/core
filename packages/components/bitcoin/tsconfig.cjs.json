{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "declarationMap": false,
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "references": [
    { "path": "../../common/cqrs/tsconfig.cjs.json" },
    { "path": "../../common/logger/tsconfig.cjs.json" },
    { "path": "../../common/exponential-interval-async/tsconfig.cjs.json" },
    { "path": "../../common/shared-interfaces/tsconfig.cjs.json" }
  ],
  "include": ["src"],
  "exclude": [
    "dist",
    "bitcoin-merkle-native",
    "**/*.test.ts",
    "**/__tests__",
  ],
}