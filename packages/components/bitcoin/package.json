    "format": "prettier -—Å prettier.config.mjs --write \"src/**/*.ts\"",
    "build:cjs": "tsc -b tsconfig.cjs.json",
    "build:esm": "rollup --config",
    "build:native": "npx @napi-rs/cli build --platform --release --config bitcoin-merkle-native/napi.config.js --cargo-cwd bitcoin-merkle-native bitcoin-merkle-native",
    "copy:native": "ts-node scripts/copy-native-packages.ts",
    "build": "yarn build:native && yarn build:cjs && yarn build:esm && yarn copy:native",
    "prepublishOnly": "yarn clear:dist && yarn build"
